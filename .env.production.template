# Production Environment Variables Template
# Copy these to your Vercel dashboard or hosting platform

# Google Drive API Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
NEXT_PUBLIC_GOOGLE_REDIRECT_URI=https://your-domain.vercel.app/auth/callback

# Google AI API Configuration
GOOGLE_API_KEY=your_google_api_key

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key
USE_OPENAI=false

# Together AI Configuration (ACTIVE)
TOGETHER_API_KEY=your_together_api_key
USE_TOGETHER=true
TOGETHER_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
USE_GOOGLE_EMBEDDINGS_ONLY=false

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=document-qa-together
PINECONE_ENVIRONMENT=gcp-starter

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key

# App API Key for additional security
APP_API_KEY=your_app_api_key

# Email Configuration for Export Feature
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@domain.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=your_email@domain.com

# Disable local services for production
USE_OLLAMA=false
USE_FASTCHAT=false
USE_VLLM=false

# Local service URLs (NOT used in production)
OLLAMA_HOST=http://localhost:11434
FASTCHAT_HOST=http://localhost:8001
VLLM_HOST=http://localhost:8000
